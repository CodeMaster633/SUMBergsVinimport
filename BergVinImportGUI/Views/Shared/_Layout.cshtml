<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BergVinImportGUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BergVinImportGUI.styles.css" asp-append-version="true" />
    <style>
        /* Layout styling */
        .layout-container {
            display: flex;
            min-height: 100vh;
        }

        /* Side-menu styling */
        .sidebar {
            width: 250px;
            background-color: #343a40; /* Mørk baggrund */
            color: #ffffff;
            padding-top: 1rem;
        }

            /* Styling af links i side-menuen */
            .sidebar .nav-link {
                color: #f8f9fa; /* Lys farve for kontrast */
                font-size: 1rem;
                transition: font-size 0.2s ease, color 0.2s ease; /* Glidende overgang */
            }

                /* Hover-effekt */
                .sidebar .nav-link:hover {
                    font-size: 1.1rem; /* Lidt større tekst */
                    color: #ffc107; /* Guld-farve ved hover */
                }

        /* Centrer indhold */
        .content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            flex: 1;
            padding: 2rem;
        }

        /* Footer styling */
        .footer {
            text-align: center;
            background-color: #f8f9fa;
            padding: 1rem 0;
        }
    </style>
</head>
<body>
    <div class="layout-container">
        <!-- Venstre side-menu i mørkt tema -->
        <nav class="sidebar border-right">
            <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Bergs Vin Import</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="OpretLager">Opret Lager</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="OpretProdukt">Opret Produkt</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Udloebsdato">Produkter Nær Udløbsdato</a>
                </li>
            </ul>
        </nav>

        <!-- Hovedindhold centreret -->
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer i bunden -->
    <footer class="footer border-top text-muted py-3">
        <div class="container text-center">
            &copy; 2024 - BergVinImportGUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
