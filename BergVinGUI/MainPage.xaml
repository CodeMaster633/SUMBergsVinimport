<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BergVinGUI.MainPage">

    <VerticalStackLayout>

        <CollectionView  x:Name="CollectionViewLager" SelectionMode="Multiple" SelectionChanged="OnLagerSelectionChanged">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="20">
                        <Label x:Name="Lager"  Text="{Binding Path= Navn}">
                        </Label>
                        <Label Text="{Binding Path=Navn}"></Label>
                        <Button Text="Fjern Lager" CommandParameter="{Binding Path=Id}"></Button>
                    </VerticalStackLayout>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>